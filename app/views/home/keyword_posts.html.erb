<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Post Title</th>
        <th>Body</th>
        <th>Keyword</th>
      </tr>
    </thead>

    <tbody>
      <% Post.all.each do |post| %>
        <% Keyword.all.each do |keyword| %>
          <% if (keyword.user == current_user) && (post.user != current_user) && (post.body.include? keyword.key_word) %>

            <tr>
              <td>
                <%= link_to post.title + ' ' + post.item, post %>
              </td>
              <td><%= post.body %></td>
              <td><%= keyword.key_word %></td>
            </tr>

          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/>
<% end %>