<p id="notice"><%= notice %></p>

<h4>My Keywords</h4>
<br/>
<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keywords.each do |keyword| %>
      <% if keyword.user == current_user %>
        <tr>
          <td><b><%= keyword.key_word %></b></td>
          <td><%= link_to 'Show', keyword, class:"btn btn-secondary" %></td>
          <td><%= link_to 'Edit', edit_keyword_path(keyword), class:"btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Keyword', new_keyword_path, class:"btn btn-secondary" %>
